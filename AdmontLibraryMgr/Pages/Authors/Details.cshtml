@page
@model AdmontLibraryMgr.Pages.Authors.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Author</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Author.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Author.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Author.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Author.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Author.DateOfBirth)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Author.DateOfBirth)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Author.Country)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Author.Country)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Author.Books)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Book Title</th>
                    <th>Year Published</th>
                </tr>
                @foreach (var item in Model.Author.Books)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PublishYear)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Author.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
